<div class="center container">
  <div class="row">
    <div class="col-md-12">
      <div class="center container">
        <div class="row">
          <div class="col-md-12 card alert-light">
            <h1>&nbsp;<%= "Category: " + @category.name %></h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 ">
            <p></p>
          </div>
        </div>
        <% if logged_in? and current_user.admin? %>
          <div class="row">
            <div class="col-md-12 ">
              <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-secondary btn-sm" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 ">
              <p></p>
            </div>
          </div>
        <% end %>
      </div>
      <%= render 'articles/article', obj: @category_articles %>
      <div class="row">
        <div class="col-md-12 ">
          <p></p>
        </div>
      </div>
    </div>
  </div>
</div>