<div class="center container">
  <div class="row">
    <div class="col-md-12 alert alert-light">
      <h1>List Of Alpha Bloggers</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 ">
      <p></p>
    </div>
  </div>
</div>
<%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)%><p>&nbsp;</p>
<div align="center">
  <% @users.each do |user| %>
    <div class="center container">
      <div class="row">
        <div class="card col-md-8 offset-md-2 bg-light">
          <div class="card-body">
            <div class="card-title"><%= link_to gravatar_for(user), user_path(user) %>
            </div>
            <div class="card-title">
              <%= link_to user.username, user_path(user), class:"card-title-custom"  %>
            </div>
              <div class="article-meta-details"><small><%= pluralize(user.articles.count, "article") if user.articles %>
              </div>
              <div class="article-meta-details">
                <% if logged_in? && current_user.admin? %>
                  <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
    <p>&nbsp;</p> 
  <% end %>
</div>
<br>

