<% obj.each do |article| %>
  <div class="row">        
    <div class="card col-md-8 offset-md-1 bg-light col-md-offset">       
      <div class="card-body">       
        <div class="card-title">       
          <%= link_to article.title, article_path(article), class:"card-title-custom" %>       
        </div>       
        <div class="card-body-custom">        
          <%= truncate(article.description, length: 30) %>
          <div class="article-meta-details">
            <small>Created by: <%= article.user.username %>, 
            <%= time_ago_in_words(article.created_at) %> ago, 
            last update: <%= time_ago_in_words(article.updated_at) %> 
            ago
            </small>
          </div>
        </div>        
        <div class="card-actions">       
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-sm btn-success" %>        
          <%= link_to "Delete this article", article_path(article), method:     :delete,
            data: { confirm: "Are you sure you want to delete the article?"},
            class: "btn btn-sm btn-dark" %>
        </div>
      </div>       
    </div>
  </div> 
  <p>&nbsp;</p>      
<% end %>