<div class="container">
        <div class="row">
          <div class="col-xl-12">
            <% if @article.errors.any? %>
              <p>
                <% @article.errors.full_messages.each do |msg| %>
                  <p class="alert alert-danger"><%= msg %></p>
                <% end %>
              </p>
            <% end %>

            <%= form_for @article do |f| %>
              <p>
                <%= f.label :title, class: 'control-label' %> <br/>
                <%= f.text_field :title, class: 'form-control' %>
              </p>
              <p>
                <%= f.label :description, class: 'control-label' %> <br/>
                <%= f.text_area :description, class: 'form-control', rows: '5' %>
              </p>
              <p>
                <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                <% cb.label(class: "form-check-inline input-checkbox") {cb.check_box(class: "form-check-input") + cb.text} %>
                <% end %>
                 <br/>
              </p>
              <p>
                <%= f.submit 'Submit', class: 'btn btn-success' %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Cancel', articles_path, class: 'btn btn-info' %>
              </p>

            <% end %>
          </div>
        </div>